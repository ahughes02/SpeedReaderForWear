<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.austinhughes.speedreaderforwear.RSSActivity">

    <TextView
        android:id="@+id/rssTitle"
        android:text="RSS Feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/back_button"
        android:onClick="onBackButtonPressed"
        android:layout_alignBottom="@+id/rssTitle"
        android:layout_alignParentStart="true"
        android:background="#ff23272a"
        android:textColor="#ffffffff" />
</RelativeLayout>
