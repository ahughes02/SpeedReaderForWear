<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.austinhughes.speedreaderforwear.MainActivity">

    <TextView
        android:id="@+id/quizTitle"
        android:text="Quiz 4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/button8"
        android:onClick="onBackButtonPressedFromQuiz"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ff23272a"
        android:textColor="#ffffffff" />

    <Button
        android:background="#ff23272a"
        android:id="@+id/button9"
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:onClick="onQuiz4Question2NextPressed"
        android:text="next"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A meteor shower occurs when the Earth passes through ______________."
            android:id="@+id/textView2"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/quizTitle"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/button10"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:background="#ff23272a"
            android:textColor="#ffffffff"
            android:onClick="onWrongAnswerPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:id="@+id/button11"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/button10"
            android:layout_alignParentStart="true"
            android:background="#ff23272a"
            android:textColor="#ffffffff"
            android:onClick="onWrongAnswerPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/button12"
            android:layout_marginTop="21dp"
            android:background="#ff23272a"
            android:textColor="#ffffffff"
            android:layout_below="@+id/button11"
            android:layout_alignParentStart="true"
            android:onClick="onWrongAnswerPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:id="@+id/button13"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/button12"
            android:layout_alignParentStart="true"
            android:background="#ff23272a"
            android:textColor="#ffffffff"
            android:onClick="onWrongAnswerPressed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:id="@+id/textView3"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignTop="@+id/button10"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:id="@+id/textView4"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignTop="@+id/button11"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:id="@+id/textView5"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignTop="@+id/button12"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:id="@+id/textView6"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignTop="@+id/button13"
            android:layout_alignEnd="@+id/quizTitle" />


</RelativeLayout>
